# vim:filetype=i3

# Set colors from xrdb. Colors must be set in xrdb before i3 config is loaded.
set_from_resource $base00 color0  #0860f2
set_from_resource $base01 color18 #333333
set_from_resource $base02 color19 #dadada
set_from_resource $base03 color8  #333333
set_from_resource $base04 color20 #000000
set_from_resource $base05 color7  #0860f2
set_from_resource $base06 color21 #000000
set_from_resource $base07 color15 #000000
set_from_resource $base08 color1  #000000
set_from_resource $base09 color16 #000000
set_from_resource $base0A color11 #000000
set_from_resource $base0B color2  #000000
set_from_resource $base0C color14 #000000
set_from_resource $base0D color12 #000000
set_from_resource $base0E color5  #000000
set_from_resource $base0F color17 #000000

#class                  border  backgr. text    indicator
client.focused          $base05 $base05 $base02 $base05
client.focused_inactive $base03 $base03 $base02 $base03
client.unfocused        $base03 $base03 $base02 $base00
client.urgent           $base01 $base01 $base05 $base00

new_window pixel 5
new_float  pixel 5

for_window [class="kitty"] border none
for_window [class="kitty"] floating enable
for_window [class="feh"] floating enable

font pango:scientifica 8
# }}}

# Variables {{{
set $mod Mod1
set $sup Mod4
set $terminal kitty 
set $workspace1  "1"
set $workspace2  "2"
set $workspace3  "3"
set $workspace4  "4"
set $workspace5  "5"
set $workspace6  "6"
set $workspace7  "7"
set $workspace8  "8"
set $workspace9  "9"
set $workspace10 "10"
set $workspace11 "11"
set $workspace12 "12"
set $workspace13 "13"
set $workspace14 "14"
set $workspace15 "15"
set $workspace16 "16"
set $workspace17 "17"
set $workspace18 "18"
set $workspace19 "19"
set $workspace20 "20"
set $workspace21 "21"
set $workspace22 "22"

# }}}

# Window Movement (excluding workspaces) {{{
workspace_layout stacking 

# workspaces move
bindsym $sup+Tab workspace next
bindsym $sup+Shift+Tab workspace prev

# terminals
bindsym $mod+grave  exec --no-startup-id $terminal

# kill
bindsym $mod+Shift+q kill

# focus
bindsym $mod+h  focus left
bindsym $mod+j  focus down
bindsym $mod+k  focus up
bindsym $mod+l  focus right

# movement
bindsym $mod+Shift+h  move left
bindsym $mod+Shift+j  move down
bindsym $mod+Shift+k  move up
bindsym $mod+Shift+l  move right

# fullscreen
bindsym $mod+f fullscreen toggle

# container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# floating
floating_modifier $mod
bindsym $mod+space floating toggle
bindsym $sup+space focus mode_toggle

# parent/child focus
bindsym $mod+a focus parent
bindsym $mod+d focus child

# resizing
bindsym $sup+h        resize shrink width  5 px or 5 ppt
bindsym $sup+j        resize grow   height 5 px or 5 ppt
bindsym $sup+k        resize shrink height 5 px or 5 ppt
bindsym $sup+l        resize grow   width  5 px or 5 ppt

bindsym $sup+Shift+h  resize shrink width  1 px or 1 ppt
bindsym $sup+Shift+j  resize grow   height 1 px or 1 ppt
bindsym $sup+Shift+k  resize shrink height 1 px or 1 ppt
bindsym $sup+Shift+l  resize grow   width  1 px or 1 ppt

# }}}

# Gaps {{{
gaps inner 10
gaps outer 0

bindsym $mod+minus       gaps inner all minus 5
bindsym $mod+plus        gaps inner all plus  5
bindsym $mod+Shift+minus gaps outer all minus 5
bindsym $mod+Shift+plus  gaps outer all plus  5
# }}}

